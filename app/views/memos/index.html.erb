<h1>Listing memos</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Lat</th>
    <th>Lon</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @memos.each do |memo| %>
  <tr>
    <td><%= translate_emoticons(memo.content) %></td>
    <td><%= memo.lat %></td>
    <td><%= memo.lon %></td>
    <td><%= link_to 'Show', memo %></td>
    <td><%= link_to 'Edit', edit_memo_path(memo) %></td>
    <td><%= link_to 'Destroy', memo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

