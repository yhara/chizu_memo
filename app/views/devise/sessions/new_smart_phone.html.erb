<div id="topbar" class="transparent">
  <div id="leftbutton"><%= link_to 'キャンセル', root_path %></div> 
  <div id="title">地図メモ</div>
</div>

<div id="content">
  <span class="graytitle">ログイン</span>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <ul class="pageitem"> 
      <li class="smallfield">
      <span class="name">Email</span>
      <%= f.text_field :email, :value => "a@b.cd" %>
      </li>
      <li class="smallfield">
      <span class="name">Password</span>
      <%= f.password_field :password, :value => "adgjmp" %>
      </li>
    </ul>

    <% if devise_mapping.rememberable? -%>
      <ul class="pageitem">
        <li class="checkbox">
        <span class="name">ログイン情報を記憶</span>
        <%= f.check_box :remember_me %>
        </li>
      </ul>
    <% end -%>

    <ul class="pageitem">
      <li class="button">
      <%= f.submit "ログイン" %>
      </li>
    </ul>
  <% end %>
</div>


